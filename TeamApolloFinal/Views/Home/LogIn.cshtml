@model TeamApolloFinal.Models.User

@{
    ViewBag.Title = "LogIn";
}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("All Systems Go", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @*<li>@Html.ActionLink("All Systems Go", "Index")</li>*@

            </ul>
        </div>
    </div>
</div>
<h2>LogIn</h2>

@ViewBag.InvalidLogIn

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <p>Username: @Html.TextBoxFor(x => x.UserName)</p>
    <p>Password: @Html.PasswordFor(x =>x.Password)</p>

    <input type="submit" value="Submit Info." />
}