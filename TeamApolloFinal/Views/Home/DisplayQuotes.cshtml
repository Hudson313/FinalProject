@model IEnumerable<TeamApolloFinal.Models.Apollo>
@{
    ViewBag.Title = "DisplayQuotes";
}
<link rel="stylesheet" type="text/css"
      href="https://fonts.googleapis.com/css?family=Changa:300|Orbitron:500|Satisfy|Ubuntu+Mono|VT323|Voltaire">
<style>
    body {
        font-family: 'Changa', sans-serif;
        font-family: 'Orbitron', sans-serif;
        font-family: 'Satisfy', cursive;
        font-family: 'Ubuntu Mono', monospace;
        font-family: 'VT323', monospace;
        font-family: 'Voltaire', sans-serif;
        font-size: 64px;
    }
    </style>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("All Systems Go", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("View Quotes", "DisplayQuotes")</li>
                <li>@Html.ActionLink("View Students", "DisplayStudents")</li>
            </ul>
        </div>
    </div>
</div>
<h2 style="font-family:'Orbitron', sans-serif;">DisplayQuotes</h2>
<body style="font-family:'Chenga',sans-serif; font-weight:bold; font-size:20px; color:white;background-size:cover;background-repeat:no-repeat;background-image: url('../../Content/Images/quotepage.jpg');">

        @Html.ActionLink("Add Quote", "AddQuote")

        <table style="width:100%">
            <tr>
                <th width="5%">ID</th>
                <th width="75%">Quote</th>
                <th width="20%">Link</th>
            </tr>
        </table>
        <table style="width:100%">
            @for (int i = (Model.Count() - 10); i < Model.Count(); i++)
            {
                <tr>
                    <td width="5%">@Model.ElementAt(i).QuoteID</td>
                    <td width="75%">@Model.ElementAt(i).Motivation</td>
                    <td width="20%">@Html.ActionLink("Delete Quote", "DeleteQuote", new { id = Model.ElementAt(i).QuoteID })</td>
                </tr>
            }


